{
  "name": "payroll-saas-monorepo",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "start:backend": "node backend/server.js",
    "dev:backend": "npx nodemon backend/server.js",
    "test": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --runInBand",
    "db:migrate": "npx prisma migrate dev --schema=./backend/prisma/schema.prisma",
    "db:seed": "node backend/prisma/seed.js",
    "prisma:generate": "cd backend && npx prisma generate",
    "test:db:sync": "dotenv -e backend/.env -- npx cross-env DATABASE_URL=\"$TEST_DATABASE_URL\" prisma migrate deploy --schema=./backend/prisma/schema.prisma"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "dotenv-cli": "^8.0.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.3"
  },
  "dependencies": {
    "@jest/globals": "^29.7.0",
    "@prisma/client": "^5.15.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-validator": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "prisma": "^5.15.0",
    "supertest": "^7.0.0",
    "validator": "^13.12.0"
  },
  "prisma": {
    "seed": "node backend/prisma/seed.js"
  }
}
